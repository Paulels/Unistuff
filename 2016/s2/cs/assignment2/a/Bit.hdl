/**
 * 1-bit register:
 * If load[t] == 1 then out[t+1] = in[t]
 *                 else out does not change (out[t+1] = out[t])
 */

CHIP Bit {
    IN in, load;
    OUT out;

    PARTS:
    Mux(a=mem,b=in,sel=load,out=mo);		//selects whether a new input is taken or if the one in memory is still being used
    DFF(in=mo,out=out,out=mem);				//outputs both output and memory
}
