 /**
 * Or gate:
 * out = 1 if (a == 1 or b == 1)
 *       0 otherwise
 */

CHIP Or {
    IN a, b;
    OUT out;

    PARTS:
    Not(in=a,out=na);			//getting the opposite of both inputs
	Not(in=b,out=nb);

	Nand(a=na,b=nb,out=out);	//Nand is the opposite of Or hence why we use 2 Not gates on the inputs
}
